<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="kr.hs.dgsw.juyeop.interview.viewmodel.adapter.AdviceItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="15dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables,UselessLeaf,UselessParent">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_user"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.name}"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/regular"
                    tools:text="김주엽"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.adviceAt}"
                    android:textColor="@color/colorBrown"
                    android:textSize="12sp"
                    android:fontFamily="@font/bold"
                    tools:text="2020-11-04 09:10:30"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/selector_button2"
                android:fontFamily="@font/bold"
                android:textColor="@color/colorStrongGray"
                android:textSize="12sp"
                android:text="@string/text_info"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@={viewModel.title}"
                android:textSize="15sp"
                android:fontFamily="@font/bold"
                android:textColor="@android:color/black"
                tools:text="제목입니다."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/regular"
                android:text="@={viewModel.content}"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                tools:text="내용입니다." />
        </LinearLayout>
    </LinearLayout>
</layout>